<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimaryDark">

    <TextView
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="?colorPrimary"
        android:layout_alignBottom="@+id/songus" />

    <!-- Join as Host-->
    <Button
        style="@style/MaterialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/join_as_host"
        android:id="@+id/login_host"

        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/login_attendee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"

        android:onClick="loginHost"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        />

    <!-- Join an Event -->
    <Button
        style="@style/MaterialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/join_as_attendee"
        android:id="@+id/login_attendee"
        android:textColor="#FFFFFF"
        android:onClick="loginAttendee"
        android:padding="8dp"

        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <!-- SONGUS -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SongUs"
        android:textSize="40sp"
        android:id="@+id/songus"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/login_host"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:paddingBottom="5dp"
        android:fontFamily=""
        />

</RelativeLayout>